{
  "appId": "com.electronvibe.app",
  "productName": "Electron Vibe",
  "directories": {
    "buildResources": "public",
    "output": "dist_electron"
  },
  "files": [
    "dist/**",
    "electron-main.js",
    "preload.js",
    "index.html",
    "resources/**",
    "src/assets/**",
    "resource-utils.js"
  ],
  "extraFiles": [
    {
      "from": "resources/${os}",
      "to": "resources/bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": "dmg"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}
